{{ 'gift-guide-banner.css' | asset_url | stylesheet_tag }}

<div class="gift-guide-banner">
  <div class="banner-nav">
    <div class="brand">{{ section.settings.brand_name }}</div>
    <div class="nav-center">{{ section.settings.tagline }}</div>
    <div class="nav-right">
      <button class="choose-gift-btn">
        {{ section.settings.button_text }} →
      </button>
    </div>
  </div>

  <div class="banner-content">
    <div class="content-left">
      <h1 class="title">{{ section.settings.heading }}</h1>
      <p class="description">{{ section.settings.description }}</p>
      <a href="{{ section.settings.button_link }}" class="shop-now-btn">
        {{ section.settings.shop_button_text }} →
      </a>
    </div>

    <div class="content-right">
      <svg class="gift-items-pattern" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
        <!-- Glasses -->
        <path d="M100,100 h60 c10,0 10,40 0,40 h-60 c-10,0 -10,-40 0,-40 M170,120 h30" fill="none" stroke="currentColor"/>
        
        <!-- Pocket Camera -->
        <g transform="translate(250,80)">
          <rect x="0" y="0" width="80" height="60" rx="5"/>
          <circle cx="40" cy="30" r="15"/>
          <rect x="60" y="10" width="15" height="10"/>
        </g>
        
        <!-- Compass -->
        <circle cx="400" cy="120" r="30" fill="none"/>
        <path d="M380,120 h40 M400,100 v40" stroke="currentColor"/>
        
        <!-- Notebook -->
        <g transform="translate(500,80)">
          <rect width="60" height="80" rx="3"/>
          <line x1="10" y1="20" x2="50" y2="20"/>
          <line x1="10" y1="40" x2="50" y2="40"/>
          <line x1="10" y1="60" x2="50" y2="60"/>
        </g>
        
        <!-- Pencil -->
        <g transform="translate(600,100)">
          <path d="M0,0 l100,0 l5,10 l-5,10 l-100,0 z"/>
          <line x1="80" y1="10" x2="110" y2="10"/>
        </g>
        
        <!-- Camera Lens -->
        <g transform="translate(100,250)">
          <circle r="25"/>
          <circle r="20"/>
          <circle r="15"/>
        </g>
        
        <!-- Watch -->
        <g transform="translate(250,250)">
          <circle r="30"/>
          <path d="M-5,-25 h10 v-10 h-10 z"/>
          <line x1="0" y1="0" x2="0" y2="-15"/>
          <line x1="0" y1="0" x2="15" y2="0"/>
        </g>
        
        <!-- More items... -->
        <!-- Duplicate and transform these elements to fill the space -->
      </svg>
    </div>
  </div>

  <div class="banner-footer">
    <p class="size-text">{{ section.settings.size_text }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Top Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "shop_button_text",
      "label": "Shop Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Shop Button Link"
    },
    {
      "type": "text",
      "id": "size_text",
      "label": "Size Range Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner",
      "category": "Promotional"
    }
  ]
}
{% endschema %}