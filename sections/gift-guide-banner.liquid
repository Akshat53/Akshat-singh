{{ 'gift-guide-banner.css' | asset_url | stylesheet_tag }}

<div class="gift-guide-banner">
  <!-- Top Nav -->
  <div class="banner-header">
    <div class="header-left">
      <h1 class="brand-name">{{ section.settings.brand_name }}</h1>
    </div>
    <div class="header-center">
      <p class="tagline">{{ section.settings.tagline }}</p>
    </div>
    <div class="header-right">
      <button class="choose-gift-btn">
        {{ section.settings.button_text }} →
      </button>
    </div>
  </div>

  <!-- SVG Pattern Background -->
  <div class="illustration-pattern">
    {% for i in (1..12) %}
      <div class="pattern-row">
        {% for j in (1..4) %}
          <svg class="pattern-item" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 200">
            <!-- Glasses -->
            <path d="M50 50 Q75 45 100 50" stroke="currentColor" stroke-width="1" fill="none"/>
            
            <!-- Camera -->
            <rect x="120" y="40" width="60" height="40" rx="5" stroke="currentColor" stroke-width="1" fill="none"/>
            <circle cx="150" cy="60" r="12" stroke="currentColor" stroke-width="1" fill="none"/>
            
            <!-- Watch -->
            <circle cx="220" cy="60" r="15" stroke="currentColor" stroke-width="1" fill="none"/>
            <rect x="212" y="40" width="15" height="5" stroke="currentColor" stroke-width="1" fill="none"/>
          </svg>
        {% endfor %}
      </div>
    {% endfor %}
  </div>

  <!-- Content (Left-aligned) -->
  <div class="banner-content">
    <h2 class="gift-guide-title">{{ section.settings.heading }}</h2>
    <div class="gift-guide-desc">{{ section.settings.description }}</div>
    
    <a href="#" class="shop-now-btn">
      SHOP NOW →
    </a>
  </div>

  <div class="banner-footer">
    <p class="size-range">{{ section.settings.size_text }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Top Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "size_text",
      "label": "Size Range Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ]
}
{% endschema %}