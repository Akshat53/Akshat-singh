{{ 'gift-guide-banner.css' | asset_url | stylesheet_tag }}

<div class="gift-guide-banner">
  <!-- Top Navigation -->
  <div class="banner-nav">
    <div class="brand">{{ section.settings.brand_name }}</div>
    <div class="nav-center">{{ section.settings.tagline }}</div>
    <div class="nav-right">
      <button class="choose-gift-btn">
        {{ section.settings.button_text }} →
      </button>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="banner-content">
    <!-- Left Side Content -->
    <div class="content-left">
 

      <h1 class="title">The Gift Guide</h1>
      <p class="description">
        Discover Joy: Your Ultimate Holiday Gift Destination.
        Explore our curated selection and find the perfect gifts to
        delight your loved ones this holiday season.
      </p>
      <a href="#" class="shop-now-btn">SHOP NOW →</a>
      </div>
 

    <!-- Right Side SVG Pattern -->
    <div class="content-right">
   
      <svg class="gift-items-pattern" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
        <!-- Bow Tie -->
        <path d="M50 50 C70 40 80 60 100 50 C80 60 70 40 50 50 Z" stroke="black" fill="none" stroke-width="2"/>
        
        <!-- Camera -->
        <g transform="translate(150, 50)">
          <rect x="0" y="0" width="120" height="80" rx="10" stroke="black" fill="none" stroke-width="2"/>
          <circle cx="60" cy="40" r="25" stroke="black" fill="none" stroke-width="2"/>
          <rect x="85" y="10" width="20" height="15" stroke="black" fill="none" stroke-width="2"/>
          <path d="M10 10 L30 10" stroke="black" stroke-width="2"/>
        </g>
        
        <!-- Watch -->
        <g transform="translate(350, 50)">
          <circle cx="30" cy="30" r="25" stroke="black" fill="none" stroke-width="2"/>
          <rect x="20" y="0" width="20" height="10" stroke="black" fill="none" stroke-width="2"/>
          <line x1="30" y1="10" x2="30" y2="30" stroke="black" stroke-width="2"/>
          <line x1="30" y1="30" x2="45" y2="30" stroke="black" stroke-width="2"/>
        </g>
        
        <!-- Glasses -->
        <path d="M500 60 Q530 50 560 60 M520 60 C520 80 540 80 540 60" stroke="black" fill="none" stroke-width="2"/>
        
        <!-- Lens -->
        <g transform="translate(600, 50)">
          <circle cx="30" cy="30" r="25" stroke="black" fill="none" stroke-width="2"/>
          <circle cx="30" cy="30" r="20" stroke="black" fill="none" stroke-width="2"/>
          <circle cx="30" cy="30" r="15" stroke="black" fill="none" stroke-width="2"/>
        </g>
        
        <!-- Pencil -->
        <g transform="translate(700, 50)">
          <path d="M0 0 L40 0 L45 5 L40 10 L0 10 Z" stroke="black" fill="none" stroke-width="2"/>
          <line x1="35" y1="5" x2="50" y2="5" stroke="black" stroke-width="2"/>
        </g>

        <!-- Repeat patterns at different positions -->
        <use href="#camera" x="100" y="200"/>
        <use href="#watch" x="300" y="200"/>
        <use href="#glasses" x="500" y="200"/>
      </svg>

   
    </div>
  </div>

  <!-- Footer Text -->
  <div class="banner-footer">
    <p class="size-text">{{ section.settings.size_text }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "size_text",
      "label": "Size Range Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ]
}
{% endschema %}