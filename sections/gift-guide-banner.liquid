{{ 'gift-guide-banner.css' | asset_url | stylesheet_tag }}

<div class="gift-guide-banner">
  <!-- Header -->
  <div class="banner-top">
    <div class="brand-name">{{ section.settings.brand_name }}</div>
    <div class="top-tagline">{{ section.settings.tagline }}</div>
    <div class="choose-gift">{{ section.settings.button_text }} →</div>
  </div>

  <!-- Main Content -->
  <div class="banner-content">
    <h1 class="gift-guide-title">The Gift Guide</h1>
    <p class="gift-description">
      Discover Joy: Your Ultimate Holiday Gift Destination.<br>
      Explore our curated selection and find the perfect gifts to<br>
      delight your loved ones this holiday season.
    </p>

    <a href="#" class="shop-now-btn">
      SHOP NOW <span class="arrow">→</span>
    </a>
  </div>

  <!-- Gift Guide Illustration -->
  <div class="illustration-grid">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 400">
      <!-- Glasses -->
      <path class="icon" d="M100 100 Q150 90 200 100" stroke="#000" stroke-width="2" fill="none"/>
      
      <!-- Camera Body -->
      <rect class="icon" x="300" y="80" width="120" height="80" rx="10" stroke="#000" stroke-width="2" fill="none"/>
      <circle class="icon" cx="360" cy="120" r="25" stroke="#000" stroke-width="2" fill="none"/>
      
      <!-- Watch -->
      <circle class="icon" cx="550" cy="120" r="30" stroke="#000" stroke-width="2" fill="none"/>
      <rect class="icon" x="535" y="80" width="30" height="10" stroke="#000" stroke-width="2" fill="none"/>
      
      <!-- Additional Items -->
      <rect class="icon" x="700" y="100" width="80" height="60" stroke="#000" stroke-width="2" fill="none"/>
      <circle class="icon" cx="800" cy="120" r="20" stroke="#000" stroke-width="2" fill="none"/>
    </svg>
  </div>

  <!-- Size Range -->
  <div class="size-range">
    {{ section.settings.size_text }}
  </div>
</div>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Top Tagline",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Top Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "size_text",
      "label": "Size Range Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner"
    }
  ]
}
{% endschema %}