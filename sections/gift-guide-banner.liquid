{{ 'gift-guide-banner.css' | asset_url | stylesheet_tag }}

<div class="gift-guide-banner">
  <div class="banner-header">
    <div class="header-left">
      <h1 class="brand-name">{{ section.settings.brand_name }}</h1>
    </div>
    <div class="header-center">
      <p class="tagline">{{ section.settings.tagline }}</p>
    </div>
    <div class="header-right">
      <button class="choose-gift-btn">
        {{ section.settings.button_text }} →
      </button>
    </div>
  </div>

  <div class="banner-content">
    <div class="illustration-grid">
      <!-- Line art illustrations -->
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 400" class="banner-illustrations">
        <!-- Glasses -->
        <path class="illustration-item" d="M100 100 Q150 90 200 100" stroke="currentColor" stroke-width="2" fill="none"/>
        
        <!-- Camera -->
        <rect class="illustration-item" x="300" y="80" width="120" height="80" rx="10" stroke="currentColor" stroke-width="2" fill="none"/>
        <circle class="illustration-item" cx="360" cy="120" r="25" stroke="currentColor" stroke-width="2" fill="none"/>
        
        <!-- Watch -->
        <circle class="illustration-item" cx="550" cy="120" r="30" stroke="currentColor" stroke-width="2" fill="none"/>
        <rect class="illustration-item" x="535" y="80" width="30" height="10" stroke="currentColor" stroke-width="2" fill="none"/>
        
        <!-- Lens -->
        <circle class="illustration-item" cx="750" cy="120" r="40" stroke="currentColor" stroke-width="2" fill="none"/>
        
        <!-- Other accessories -->
        <rect class="illustration-item" x="900" y="100" width="100" height="20" stroke="currentColor" stroke-width="2" fill="none"/>
      </svg>
    </div>

    <h2 class="gift-guide-title">{{ section.settings.heading }}</h2>
    <div class="gift-guide-desc">{{ section.settings.description }}</div>
    
    <a href="#" class="shop-now-btn">
      SHOP NOW →
    </a>
  </div>

  <div class="banner-footer">
    <p class="size-range">{{ section.settings.size_text }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Top Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "size_text",
      "label": "Size Range Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ]
}
{% endschema %}